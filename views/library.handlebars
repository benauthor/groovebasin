{{#if artists}}
  <ul id="library-items" class="library-item-list">
    {{#artists}}
      <li>
        <div class="artist hoverable expandable">
          <div class="ui-icon ui-icon-triangle-1-e"></div>
          <span>{{name}}</span>
        </div>
        <ul style="display: none;">
          {{#albums}}
            <li>
              <div class="album hoverable expandable">
                <div class="ui-icon ui-icon-triangle-1-e"></div>
                <span>{{name}}</span>
              </div>
              <ul style="display: none;">
                {{#tracks}}
                  <li>
                    <div class="track hoverable" data-file="{{file}}">
                      <span>{{#if track}}{{track}}. {{/if}}{{#if artist_disambiguation}}{{artist_disambiguation}} - {{/if}}{{name}}</span>
                    </div>
                  </li>
                {{/tracks}}
              </ul>
            </li>
          {{/albums}}
        </ul>
      </li>
    {{/artists}}
  </ul>
{{else}}
  {{empty_library_message}}
{{/if}}

{{#if rdio_artists}}
  <ul id="rdio-items" class="library-item-list">
    {{#rdio_artists}}
      <li>
        <div class="artist hoverable expandable">
          <div class="ui-icon ui-icon-triangle-1-e"></div>
          <span>{{name}}</span>
        </div>
        <ul>
          {{#hash albums}}
            <li>
              <div class="album hoverable expandable">
                <div class="ui-icon ui-icon-triangle-1-e"></div>
                <span>{{name}}</span>
              </div>
              <ul>
                {{#hash tracks orderby="track,name"}}
                  <li>
                    <div class="track hoverable" data-key="{{key}}">
                      <span>{{#if track}}{{track}}. {{/if}}{{name}}</span>
                    </div>
                  </li>
                {{/hash}}
              </ul>
            </li>
          {{/hash}}
        </ul>
      </li>
    {{/rdio_artists}}
  </ul>
{{/if}}

